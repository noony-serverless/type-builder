{
  "name": "ultra-fast-typer-builder",
  "version": "1.0.0",
  "description": "Ultra-fast TypeScript builder library with auto-detection for Zod, Classes, and Interfaces",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "benchmark": "turbo run benchmark",
    "clinic": "turbo run clinic",
    "html:test": "cd packages/clinic-tests && npm run serve",
    "clinic:doctor": "cd packages/clinic-tests && npm run clinic:doctor",
    "clinic:flame": "cd packages/clinic-tests && npm run clinic:flame",
    "clinic:bubbleprof": "cd packages/clinic-tests && npm run clinic:bubbleprof",
    "clinic:heapprofiler": "cd packages/clinic-tests && npm run clinic:heapprofiler",
    "dev": "turbo run dev",
    "lint": "eslint \"packages/**/src/**/*.{ts,tsx}\" --max-warnings 0",
    "lint:fix": "eslint \"packages/**/src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json,md}\"",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "clinic": "^12.0.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
